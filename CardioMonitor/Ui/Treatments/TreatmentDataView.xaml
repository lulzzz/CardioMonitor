<UserControl x:Class="CardioMonitor.View.TreatmentDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:treatmentData="clr-namespace:CardioMonitor.Patients.TreatmentData"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <ScrollViewer>
    <StackPanel>
        <StackPanel Margin="0, 10, 0, 10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="{Binding PatientName}"
                   FontSize="16"
                   FontWeight="Bold">
            </TextBlock>
            <TextBlock Text="Дата начала курса:"
                       Margin="25,0"
                       FontSize="16"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                       FontSize="16"
                       FontWeight="Bold"/>
        </StackPanel>
        <Expander Header="ЧСС">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView x:Name="HeartRateInfo"
                                                         Margin="10"
                                                         DataContext="{Binding Source=Statistic, Path=HeartRate}"/>
                <Button Content="Сохранить в файл"
                        Command="{Binding SaveSignleCommand}"
                        CommandParameter="{Binding ElementName=HeartRateInfo, Path=DataContext}"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="ЧД">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView Margin="10"/>
                <Button Content="Сохранить в файл"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="SPO2">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView Margin="10"/>
                <Button Content="Сохранить в файл"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="АД среднее">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView Margin="10"/>
                <Button Content="Сохранить в файл"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="Ад систолическое">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView Margin="10"/>
                <Button Content="Сохранить в файл"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="Ад даисистолическое">
            <StackPanel>
                <treatmentData:TreatmentParametrGridView Margin="10"/>
                <Button Content="Сохранить в файл"
                        Margin="10"
                        MaxWidth="150"
                        FontSize="11"></Button>
            </StackPanel>
        </Expander>
        <Expander Header="Графики">
            <StackPanel>
                <TextBlock Text="Тут будут графики"
                           Margin="10"
                           MaxWidth="150"
                           FontSize="11"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
